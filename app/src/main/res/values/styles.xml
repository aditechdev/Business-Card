<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Theme for Information text -->
    <style name="information_text">
        <!-- Customize your theme here. -->
        <item name="android:layout_marginLeft">@dimen/twenty_five</item>
        <item name="android:layout_marginTop">@dimen/ten</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:drawablePadding">@dimen/ten</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorLink">@color/dark_black</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

</resources>
